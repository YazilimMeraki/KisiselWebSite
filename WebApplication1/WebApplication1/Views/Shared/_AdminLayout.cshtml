
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Panelim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="/Homepage/Index" class="w3-bar-item w3-button btn-success" target="_blank">Siteye Git</a>
        <a href="~/Admin/Index" class="w3-bar-item w3-button btn-success">Bilgiler</a>
        <a href="/Admin/ListSlider" class="w3-bar-item w3-button btn-success">Baş Resim</a>
        <a href="/Admin/ListProject" class="w3-bar-item w3-button btn-success">Projelerim</a>
        <a href="/Admin/ListGalery" class="w3-bar-item w3-button btn-success">Galeri</a>
        <a href="~/Admin/CallIcon" class="w3-bar-item w3-button btn-success">Sosyal Medya</a>
        <a href="/Admin/ListAdmin" class="w3-bar-item w3-button btn-info">Hesaplar</a>
        <a href="/Login/LogOut/" class="w3-bar-item w3-button btn-danger">Çıkış</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:25%">

        <div class="w3-container" style="background-image: linear-gradient(120deg,#3498db,#8e44ad); ">
            <h1 style="color:white;">Admin Yönetim Paneli</h1>
        </div>

        

        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
