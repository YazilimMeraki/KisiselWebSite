
@model WebApplication1.Models.Classes.Images

@{
    ViewBag.Title = "BringProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Proje Güncelle</h2>
<br />

@using (Html.BeginForm("UpdateProject", "Admin", FormMethod.Post))
{
    @Html.Label("ID");
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" });
    <br />
    @Html.Label("Resim Linki");
    @Html.TextBoxFor(x => x.pic, new { @class = "form-control" });
    <br />
    @Html.Label("Proje Başlığı");
    @Html.TextBoxFor(x => x.header, new { @class = "form-control" });
    <br />
    @Html.Label("Proje Hakkında");
    @Html.TextAreaFor(x => x.about, new { @class = "form-control" });
    <br />
    <button class="btn btn-success">Kaydet ve Güncelle</button>
}

